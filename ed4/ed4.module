<?php

/**
 * @file
 * 
 * A custom entity demo. ed4 does all that ed3 did, but it uses Entity Plus to
 * provide Views and tokens support. Note: token support is provided by enabling
 * Entity Tokens.
 * 
 * Entry paths:
 * /student 
 * (create, edit, delete, view students)
 * 
 * /admin/structure/student-bundle
 * (list and create bundles, and add fields)
 * 
 */

/**
 * Implements hook_entity_info().
 */
function ed4_entity_info() {
  $info = array(
    'student' => array(
      'label' => t('Student'),
      'entity class' => 'Student',
      // Instead of core's entity controller, we use Entity Plus' one.
      'controller class' => 'EntityPlusController',
      // In order for Entity Plus to provide Views integration, we need to
      // provide the `module` key AND do NOT implement hook_views_data() 
      // Note: if you need to define additional Views data, use hook_views_data_alter()
      'module' => 'ed4',
      'base table' => 'student',
      'fieldable' => TRUE,
      'entity keys' => array(
        'id' => 'student_id',
        'bundle' => 'bundle',
        'label' => 'name',
      ),
      'bundle keys' => array(
        'bundle' => 'bundle',
      ),
      'bundles' => array(),
    ),
  );

  return $info;
}

/**
 * Implements hook_entity_info_alter().
 * 
 * Here, we dynamically define the bundles.
 */
function ed4_entity_info_alter(&$info) {
  // Dynamically create entity bundle information.
  foreach (student_bundle_load() as $bundle_machine_name => $bundle_info) {
    $info['student']['bundles'][$bundle_machine_name] = array(
      'label' => $bundle_info->label,
      'admin' => array(
        'path' => 'admin/structure/student-bundle/%student_bundle',
        'real path' => 'admin/structure/student-bundle/' . $bundle_machine_name,
        'bundle argument' => 3,
        'access arguments' => array('administer students'),
      ),
    );
  }
}

/**
 * Implements hook_autoload_info().
 */
function ed4_autoload_info() {
  return array(
    'Student' => 'ed4.entity.inc',
